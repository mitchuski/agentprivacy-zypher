# Zcash Components Configuration
# Copy this file to .env and fill in your values

# ============================================
# Zcash Network Configuration
# ============================================

# Network: testnet or mainnet
ZCASH_NETWORK=testnet

# Lightwalletd server
# Testnet options:
#   - https://zec.rocks:443
#   - https://testnet.lightwalletd.com:9067
# Mainnet options:
#   - https://mainnet.lightwalletd.com:9067
#   - https://zec.rocks:443
ZCASH_SERVER=https://zec.rocks:443

# Path to wallet data directory
# This should be an absolute path
ZCASH_DATA_DIR=/home/yourusername/proverb-protocol/zcash-wallet

# ============================================
# Economic Model
# ============================================

# Cost per proverb submission (in ZEC)
PROVERB_COST=0.01

# Public inscription split (percentage as decimal)
# Default: 0.44 = 44%
PUBLIC_SPLIT=0.44

# Private transaction split (percentage as decimal)
# Default: 0.56 = 56%
PRIVATE_SPLIT=0.56

# Network fee per transaction (in ZEC)
# Zcash standard fee
NETWORK_FEE=0.0001

# ============================================
# Oracle Configuration
# ============================================

# How often to check for new submissions (in seconds)
# Default: 30 seconds
ORACLE_CHECK_INTERVAL=30

# Number of retry attempts for failed operations
# Default: 3
ORACLE_RETRY_ATTEMPTS=3

# Delay between retry attempts (in seconds)
# Default: 5 seconds
ORACLE_RETRY_DELAY=5

# Minimum confirmations required to process submission
# Default: 1 (at least 1 confirmation)
MIN_CONFIRMATIONS=1

# ============================================
# Optional: Other Components
# ============================================

# BlueNexus AI (if using AI verification)
# BLUENEXUS_API_KEY=your_bluenexus_api_key_here
# BLUENEXUS_MODEL=claude-3-5-sonnet-20241022

# Nillion TEE (if using Nillion signing)
# NILLION_API_KEY=your_nillion_api_key_here
# NILLION_NETWORK=testnet

# IPFS/Pinata (if using IPFS storage)
# PINATA_JWT=your_pinata_jwt_here
# PINATA_GATEWAY=https://gateway.pinata.cloud
# SPELLBOOK_CID=QmYourSpellbookCID...

# PostgreSQL Database (if using database)
# DATABASE_URL=postgresql://proverb_user:your_password@localhost:5432/proverb_protocol

# ============================================
# Logging Configuration
# ============================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log file path
LOG_FILE=logs/oracle.log

# ============================================
# Development/Testing
# ============================================

# Set to 'development' for local testing, 'production' for deployment
NODE_ENV=development

# Enable verbose logging (true/false)
# VERBOSE_LOGGING=false

# Dry run mode - don't actually send transactions (true/false)
# DRY_RUN=false
