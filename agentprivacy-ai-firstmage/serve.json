{
  "public": "out",
  "rewrites": [
    {
      "source": "/story",
      "destination": "/story.html"
    },
    {
      "source": "/story/markdown/**",
      "destination": "/story/markdown/:filename"
    },
    {
      "source": "/zero",
      "destination": "/zero.html"
    },
    {
      "source": "/zero/markdown/**",
      "destination": "/zero/markdown/:filename"
    },
    {
      "source": "/mage",
      "destination": "/mage.html"
    },
    {
      "source": "/proverbs",
      "destination": "/proverbs.html"
    },
    {
      "source": "/the-first",
      "destination": "/the-first.html"
    }
  ],
  "headers": [
    {
      "source": "**/*.md",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/markdown; charset=utf-8"
        }
      ]
    }
  ]
}

